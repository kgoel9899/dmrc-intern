<!DOCTYPE html>
<html>
<head>
	<title>MAP</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/assets/style.css">
  <script src="/assets/showw.js"></script>
</head>
<body>
<div id="mapInit">
  <form method="post" id="fo">
    <strong>Name: </strong> <input type="text" name="name" placeholder="Name" required="true">  
    <strong>Address: </strong> <input type="text" name="address" placeholder="Address" required="true">
    <strong>Latitude: </strong> <input type="text" name="lat" placeholder="Latitude" required="true">
    <strong>Longitude: </strong> <input type="text" name="lng" placeholder="Longitude" required="true">  
    <button class="b1" type="submit"> <strong>Add Data</strong> </button>
  </form>  
  <br>
  <div id="mu">
      <button id="dynamic" type="button" class="btn btn-primary" onclick="allprev()">Click to enable multiple selections</button>
      <button type="button" class="btn btn-primary" onclick="alll()">View All</button>
  </div>
  <br>
  <br>
  <table id="table1">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>View</th>
    </tr>
    <% for(var i=0; i<data.length; i++) { %>
      <tr>
        <td id="<%= data[i].address %>"><input type="checkbox" class="dispcheck"><%= data[i].name %></td>
        <td><%= data[i].address %></td>
        <td><%= data[i].lat %></td>
        <td><%= data[i].lng %></td>
        <td id= "<%= data[i].address %>"> <button onclick="codeAddress1(this.parentNode.id)" type="button" class="btn btn-info"> View </button></td>
      </tr>
    <% } %>
  </table>
</div>
<br>
<p id="disp"></p>
<br id="br1">
<br id="br1">
<button onclick="resett()" id="res" type="button" class="btn btn-primary"><strong>Reset</strong></button>
<br>
<br>
<div id="map"></div>
<script src="https://maps.googleapis.com/maps/api/js?key=API_KEY&callback=initMap"
async defer></script>
</body>
</html>